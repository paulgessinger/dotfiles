# This tmux statusbar config was created by tmuxline.vim
# on Fri, 01 Dec 2017

set -g status-justify "left"
set -g status "on"
set -g status-attr "none"
set -g message-command-bg "colour10"
set -g status-left-length "100"
set -g pane-active-border-fg "colour4"
set -g status-bg "colour8"
set -g message-command-fg "colour14"
set -g pane-border-fg "colour10"
set -g message-bg "colour10"
set -g status-left-attr "none"
set -g status-right-attr "none"
set -g status-right-length "100"
set -g message-fg "colour14"
setw -g window-status-fg "colour4"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour8"
setw -g window-status-activity-attr "underscore"
setw -g window-status-activity-fg "colour4"
setw -g window-status-separator ""
setw -g window-status-bg "colour8"
set -g status-left "#[fg=colour7,bg=colour4] #S #[fg=colour4,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour14,bg=colour10] #(whoami) #[fg=colour10,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour4,bg=colour8] #{?client_prefix,^A,} #[fg=colour8,bg=colour8,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour8,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour4,bg=colour8] #{pane_current_path} #[fg=colour10,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour14,bg=colour10] %H:%M %a %d/%m/%Y #[fg=colour4,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour4] #h "
setw -g window-status-format "#[fg=colour8,bg=colour8,nobold,nounderscore,noitalics]#[default] #I  #W #[fg=colour8,bg=colour8,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour8,bg=colour10,nobold,nounderscore,noitalics]#[fg=colour14,bg=colour10] #I  #W #[fg=colour10,bg=colour8,nobold,nounderscore,noitalics]"
